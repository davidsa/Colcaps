yellow-color = #fcd570
brown-color = #904643
light-grey = #e0e0e0
header-color = lighten(black, 30%)

body, html
  height 100%
  font-family 'Raleway', sans-serif
  color white
  font-size 18px
  line-height 25px
  font-family 'Montserrat', sans-serif

h1
  font-size 1.8rem

img
  max-width 100%
  height auto

a
  color black
  &
  &:visited
  &:hover
  &:focus
    text-decoration none

.header
  width 100%
  position fixed
  background-color white
  z-index 100
  display flex
  flex-direction column
  align-items center
  padding 5px
  &__text
    color: darken(light-grey, 30%)
    font-size 1.8rem
    padding 5px

  &__nav
    display flex
    list-style none
    color black
    font-size 1rem
    li
      padding 10px
      cursor pointer
      &:hover
        background-color lighten(light-grey, 50%)

.separator
  height 80px
  background-color white
  display flex
  align-items center
  justify-content center
  //height 150px
  .separator__text
    font-size 1.7rem
    color header-color
  &.separator--small
    height 50px

.slide
  height 100%
  background-size cover
  background-attachment fixed
  background-repeat no-repeat
  background-position center center
  display flex
  align-items center
  color black
  &__panel
    margin 0 auto
    padding 15px
    background-color transparentify(white, 0.7)
    width 70%
    //padding 20px
    //margin-left 50px
  &__title
    font-size 1.3rem
    margin 10px 0
    color header-color
  //&--right
  //  justify-content flex-end
  //  .slide__panel
  //    margin-right 50px
  &--home
    background-image url("/images/home.jpg")
    align-items flex-end
    .slide__panel
      margin-bottom 50px
      //width 90%
      //margin 0 auto
  &--capsulas
    background-image url("/images/gel_capsules.jpg")
  &--productos
    background-image url("/images/gel_capsules.jpg")
  &--aceite
    background-image url("/images/aceite.jpg")
  &--servicios
    background-image url("/images/maquila.jpg")
    padding 10px 0
    height auto
    flex-direction column
    .slide__panel
      margin 20px
      //margin 0 20px
      //min-height 305px
  &--contactenos
    background-color white
    height 25%
    flex-direction column
    .disclaimer
      margin 30px 0 10px 0
      width 80%
      text-align center
    .slide__panel
      padding 0
      margin 0
      list-style none
      width auto
      text-align center
      label
        color header-color
        font-weight bold

.social-media
  position: fixed
  bottom 0
  right 0
  background-color rgba(white, 0.5)

.media
  position fixed
  bottom 0
  left 1%
  background-color: white;
  border-radius: 10px;
  margin-bottom: 10px;
  padding 5px

.fa
  margin 0 2px
  cursor pointer

.fa-facebook-square
  color #3b5998

.fa-twitter-square
  color #00aced

@media (min-width: 460px)
  body,html
    font-size 20px
    line-height 30px
  .header
    &__text
      padding 10px

@media (min-width: 620px)
  body,html
    font-size 22px
    line-height 35px
  .slide
    &--servicios
      height 100%
@media (min-width: 800px)
  .slide
    &--servicios
      flex-direction row
      .slide__panel
        min-height 505px
  .header
    flex-direction row
    &__text
      flex-grow 0.9

@media (min-width: 1200px)
  .slide
    &__panel
      margin-left 50px
    &--home
      .slide__panel
        width 90%
    &--servicios
      .slide__panel
        min-height 303px
    &--right
      justify-content flex-end
      .slide__panel
        margin-right 50px
  .header
    &__nav
      font-size 1.2rem


