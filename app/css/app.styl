body
  margin 0
  padding 0
  font-family 'Montserrat', sans-serif;

img
  max-width 100%

.slide
  display flex
  height 100vh
  justify-content center
  align-items center

.slide:first-child
  background-image url('/images/capsule.jpg')
  background-size cover
  background-position center
  background-repeat: no-repeat

.logo
  min-width 400px
  height 100px
  display flex
  justify-content center
  align-items center
  background-color rgba(black, 0.5)
  color white

.social-media
  position: fixed
  bottom 0
  right 0
  background-color rgba(white, 0.5)
.media
  position fixed
  bottom 0
  left 5%

.fa
  margin 10px
  cursor pointer

.fa-facebook-square
  color #3b5998
